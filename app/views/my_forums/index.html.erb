<h1>Listing my_forums</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @my_forums.each do |my_forum| %>
      <tr>
        <td><%= my_forum.name %></td>
        <td><%= my_forum.description %></td>
        <td><%= link_to 'Show', my_forum %></td>
        <td><%= link_to 'Edit', edit_my_forum_path(my_forum) %></td>
        <td><%= link_to 'Destroy', my_forum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New My forum', new_my_forum_path %>
